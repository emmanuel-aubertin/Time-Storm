<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane fx:id="myAnchorPane" styleClass="myAnchorPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.timestorm.HomePageController">
    <children>
        <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" >
           <center>
              <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
           </center>
           <top>
            <HBox spacing="10" BorderPane.alignment="CENTER">
                <children>
                    <Button fx:id="btnDark" text="Dark" onAction="#onDarkButtonClick"/>
                    <Button fx:id="btnHome" text="Home" onAction="#onHomeButtonClick" />
                    <Button fx:id="btnFormation" text="Formation" onAction="#onFormationButtonClick"/>
                    <Button fx:id="btnSalle" text="Salle" onAction="#onSalleButtonClick"/>
                    <Button fx:id="btnPersonnel" text="Personnel" onAction="#onPersonnelButtonClick" />
                    <Region HBox.hgrow="ALWAYS" />
                    <DatePicker />
                    <ToggleButton text="Jour" fx:id="dayBtn" toggleGroup="$viewToggleGroup" selected="true" />
                    <ToggleButton text="Semaine" fx:id="weekBtn" toggleGroup="$viewToggleGroup" />
                    <ToggleButton text="Mois" fx:id="monthBtn" toggleGroup="$viewToggleGroup" />
                    </children>
            </HBox>
        </top>
        </BorderPane>
    </children>
</AnchorPane>