<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="myAnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.timestorm.LoginPage">
    <children>
        <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="0">
            <center>
                <VBox fx:id="formContainer" alignment="CENTER" prefHeight="400.0" prefWidth="531.0" spacing="10.0">
                    <children>
                        <TextField fx:id="usernameField" opacity="0.9" promptText="Username" styleClass="text-field" />
                        <PasswordField fx:id="passwordField" opacity="0.9" promptText="Password" styleClass="password-field" />
                        <Button onAction="#handleLogin" opacity="0.9" styleClass="login-button" text="Login" />
                    </children>
                </VBox>
            </center>
        </BorderPane>
        <Button fx:id="btnDark" alignment="TOP_LEFT" opacity="0.9" nodeOrientation="LEFT_TO_RIGHT" onAction="#onDarkButtonClick" text="Dark" textAlignment="CENTER" AnchorPane.leftAnchor="8.0" AnchorPane.bottomAnchor="8.0">
            <opaqueInsets>
                <Insets left="8.0" top="8.0" />
            </opaqueInsets>
        </Button>
    </children>
</AnchorPane>
