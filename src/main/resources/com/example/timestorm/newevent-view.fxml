<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.timestorm.NewEventViewController">
    <GridPane hgap="10" vgap="10">


    <Label text="Start Time:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="startTimeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="End Time:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <ComboBox fx:id="endTimeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />


        <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Memo:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="memoField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="typeField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Teacher Code:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="teacherCodeField" onKeyReleased="#handleTeacherCodeInput" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="Classroom Code:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextField  fx:id="classroomCodeField" onKeyReleased="#handleClassroomCodeInput" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <Label text="Promo Code:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <TextField fx:id="promoCodeField" onKeyReleased="#handlePromoCodeInput" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    </GridPane>

    <Button fx:id="createButton" text="Create Event" onAction="#onCreateEventButtonClick"></Button>
    <Button fx:id="backButton" text="Back" onAction="#onBackButtonClick"></Button>
</VBox>
